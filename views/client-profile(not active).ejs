                <i class="fas fa-hands-helping mr-2"></i>
                Service Connect
            </div>
            <div class="hidden md:flex space-x-6 items-center">
                <a href="/" class="hover:text-gray-300 transition-colors">Home</a>
                <a href="/client/services/find" class="hover:text-gray-300 transition-colors">Find Service</a>
                <div class="relative group">
                    <button class="hover:text-gray-300 transition-colors">
                       <!-- <i class="fas fa-chevron-down text-sm"></i> -->
                    </button>
                    <div class="absolute hidden group-hover:block bg-white text-gray-800 rounded-lg shadow-md mt-2 py-2 w-48">
                        <a href="client-profile.html" class="block px-4 py-2 hover:bg-blue-50">Mteja</a>
                        <a href="worker-profile.html" class="block px-4 py-2 hover:bg-blue-50">Mfanyakazi</a>
                    </div>
                </div>
                <!-- <a href="booking.html" class="bg-white text-blue-600 px-4 py-2 rounded-full hover:bg-gray-100 transition-all">
                    <i class="fas fa-calendar-check mr-2"></i>Ombi
                </a> -->
            </div>
            <button class="md:hidden text-white text-2xl">
                <i class="fas fa-bars"></i>
            </button>
        </nav>
    </header>

    <!-- Client Profile Section -->
    <main class="pt-24 pb-12 px-4">
        <div class="container mx-auto">
            <!-- Profile Header -->
            <div class="bg-gradient-to-r from-blue-500 to-purple-600 rounded-2xl shadow-xl p-8 text-white animate-fade-in">
                <div class="flex flex-col md:flex-row items-center gap-6">
                    <div class="w-32 h-32 rounded-full bg-white/20 flex items-center justify-center">
                        <i class="fas fa-user-circle text-6xl"></i>
                    </div>
                    <div class="text-center md:text-left">
                        <h1 class="text-3xl font-bold"><%=user.clients[0].full_name%></h1>
                        <p class="mt-2 flex items-center justify-center md:justify-start">
                            <i class="fas fa-map-marker-alt mr-2"></i>
                            Dar es Salaam, Tanzania
                        </p>
                        <div class="mt-4 flex gap-4 justify-center md:justify-start">
                            <div class="bg-white/20 px-4 py-2 rounded-full">
                                <i class="fas fa-phone mr-2"></i>0755 123 456
                            </div>
                            <div class="bg-white/20 px-4 py-2 rounded-full">
                                <i class="fas fa-envelope mr-2"></i><%=user.email%>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Profile Content -->
            <div class="grid md:grid-cols-3 gap-8 mt-8">
                <!-- Quick Stats -->
                <div class="bg-white rounded-2xl shadow-lg p-6 animate-fade-in">
                    <h3 class="text-xl font-semibold mb-4">Your Stats</h3>
                    <div class="space-y-4">
                        <div class="flex justify-between items-center p-3 bg-blue-50 rounded-lg">
                            <span>Active Request</span>
                            <span class="bg-blue-600 text-white px-3 py-1 rounded-full">5</span>
                        </div>
                        <div class="flex justify-between items-center p-3 bg-purple-50 rounded-lg">
                            <span>Complete Request</span>
                            <span class="bg-purple-600 text-white px-3 py-1 rounded-full">12</span>
                        </div>
                        <div class="flex justify-between items-center p-3 bg-green-50 rounded-lg">
                            <span>Trusted Workers</span>
                            <span class="bg-green-600 text-white px-3 py-1 rounded-full">8</span>
                        </div>
                    </div>
                </div>

                <!-- Recent Bookings -->
                <div class="md:col-span-2 bg-white rounded-2xl shadow-lg p-6 animate-fade-in">
                    <h3 class="text-xl font-semibold mb-4">Recent Request</h3>
                    <div class="overflow-x-auto">
                        <table class="w-full">
                            <thead class="bg-gray-50">
                                <tr>
                                    <th class="text-left py-3 px-4">Services</th>
                                    <th class="text-left py-3 px-4">Date</th>
                                    <th class="text-left py-3 px-4">Status</th>
                                    <th class="text-left py-3 px-4">Track</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr class="border-b hover:bg-gray-50">
                                    <td class="py-3 px-4">Cleaning </td>
                                    <td class="py-3 px-4">12 Jan 2024</td>
                                    <td class="py-3 px-4">
                                        <span class="bg-yellow-100 text-yellow-800 px-2 py-1 rounded-full text-sm">
                                            Pending
                                        </span>
                                    </td>
                                    <td class="py-3 px-4">
                                        <button class="text-blue-600 hover:text-blue-800">
                                            <i class="fas fa-ellipsis-h"></i>
                                        </button>
                                    </td>
                                </tr>
                                <!-- Add more rows -->
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <!-- Call to Action -->
            <div class="mt-8 text-center">
                <a href="/client/service/find" 
                   class="inline-block bg-gradient-to-r from-green-500 to-blue-600 text-white px-8 py-3 rounded-full 
                          hover:shadow-lg transition-all duration-300">
                    <i class="fas fa-search mr-2"></i>Search for new services
                </a>
            </div>
        </div>
    </main>

    
