            <div class="glide__track" data-glide-el="track">
              <ul class="glide__slides">
                  <!-- Service Cards -->
                  <li class="glide__slide px-2">
                      <div class="bg-white shadow-lg rounded-xl hover:shadow-xl transition-all duration-300 h-full p-6">
                          <div class="image-container rounded-xl mb-6">
                              <img src="/images/hygiene.webp" alt="Usafi" class="w-full h-full object-cover  transform hover:scale-105">
                          </div>
                          <h3 class="text-2xl font-bold text-blue-600 mb-2">Cleaning</h3>
                          <p class="text-gray-600">Get best cleaners near your area and live with good hygiene.</p>
                      </div>
                  </li>
                  
                  <li class="glide__slide px-2">
                      <div class="bg-white shadow-lg rounded-xl hover:shadow-xl transition-all duration-300 h-full p-6">
                          <div class="image-container rounded-xl mb-6">
                              <img src="/images/gardening.jpg" alt="Bustani" class="w-full h-full object-cover transform hover:scale-105">
                          </div>
                          <h3 class="text-2xl font-bold text-blue-600 mb-2">Gardening</h3>
                          <p class="text-gray-600">Gardening and planting trees services for tidy environment.</p>
                      </div>
                  </li>

                  <li class="glide__slide px-2">
                      <div class="bg-white shadow-lg rounded-xl hover:shadow-xl transition-all duration-300 h-full p-6">
                          <div class="image-container rounded-xl mb-4">
                              <img src="/images/catering.jpg" alt="catering" class="w-full h-full object-cover transform hover:scale-105 ">
                          </div>
                          <h3 class="text-2xl font-bold text-blue-600 mb-2">Catering</h3>
                          <p class="text-gray-600 mb-2">Get well trained personels in catering different services.</p>
                      </div>
                  </li>

                  <li class="glide__slide px-2">
                      <div class="bg-white shadow-lg rounded-xl hover:shadow-xl transition-all duration-300 h-full p-6">
                          <div class="image-container rounded-xl mb-4">
                              <img src="/images/security.jpg" alt="Ulinzi" class="w-full h-full object-cover transform hover:scale-105">
                          </div>
                          <h3 class="text-2xl font-bold text-blue-600 mb-2">Security</h3>
                          <p class="text-gray-600 mb-2">Get security experts to be at your service.</p>
                      </div>
                  </li>

                  <li class="glide__slide px-2">
                      <div class="bg-white shadow-lg rounded-xl hover:shadow-xl transition-all duration-300 h-full p-6">
                          <div class="image-container rounded-xl mb-4">
                              <img src="/images/repair.jpg" alt="Ukarabati" class="w-full h-full object-cover transform hover:scale-105">
                          </div>
                          <h3 class="text-2xl font-bold text-blue-600 mb-2">Repair</h3>
                          <p class="text-gray-600 mb-2">Quick fix of house and office hardwares .</p>
                      </div>
                  </li>

                  <li class="glide__slide px-2">
                      <div class="bg-white shadow-lg rounded-xl hover:shadow-xl transition-all duration-300 h-full p-6">
                          <div class="image-container rounded-xl mb-4">
                              <img src="/images/transport.jpg" alt="Usafiri" class="w-full h-full object-cover transform hover:scale-105">
                          </div>
                          <h3 class="text-2xl font-bold text-blue-600 mb-2">Transport</h3>
                          <p class="text-gray-600 mb-2">Book cargo trucks also get delivery services.</p>
                      </div>
                  </li>
              </ul>
          </div>

          <!-- Slider Controls -->
          <div class="glide__arrows" data-glide-el="controls">
              <button class="glide__arrow glide__arrow--left absolute left-0 top-1/2 -translate-y-1/2 bg-white/80 backdrop-blur-sm p-4 rounded-full shadow-xl hover:bg-white transition-all duration-300 -translate-x-12 opacity-0 group-hover:opacity-100" data-glide-dir="<">
                  <i class="fas fa-chevron-left text-blue-600 text-xl"></i>
              </button>
              <button class="glide__arrow glide__arrow--right absolute right-0 top-1/2 -translate-y-1/2 bg-white/80 backdrop-blur-sm p-4 rounded-full shadow-xl hover:bg-white transition-all duration-300 translate-x-12 opacity-0 group-hover:opacity-100" data-glide-dir=">">
                  <i class="fas fa-chevron-right text-blue-600 text-xl"></i>
              </button>
          </div>

          <!-- Bullet Indicators -->
          <div class="glide__bullets mt-8 flex justify-center gap-2" data-glide-el="controls[nav]">
              <button class="glide__bullet w-2.5 h-2.5 rounded-full bg-gray-300" data-glide-dir="=0"></button>
              <button class="glide__bullet w-2.5 h-2.5 rounded-full bg-gray-300" data-glide-dir="=1"></button>
              <button class="glide__bullet w-2.5 h-2.5 rounded-full bg-gray-300" data-glide-dir="=2"></button>
              <button class="glide__bullet w-2.5 h-2.5 rounded-full bg-gray-300" data-glide-dir="=3"></button>
              <button class="glide__bullet w-2.5 h-2.5 rounded-full bg-gray-300" data-glide-dir="=4"></button>
              <button class="glide__bullet w-2.5 h-2.5 rounded-full bg-gray-300" data-glide-dir="=5"></button>
          </div>
          </div>
        </div>
      </section>

      <!-- Call to Action -->

      <section class="bg-gray-200 py-16 text-center" id="mission">
           
         
           <!-- Our Mission Section -->
