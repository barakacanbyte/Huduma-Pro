<!DOCTYPE html>
<html lang="sw">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Service Connect</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/gsap.min.js"></script>
    <link

      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/@glidejs/glide/dist/css/glide.core.min.css"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
    />
    <style>
      .glide__bullet.active {
        background-color: #2563eb;
        transform: scale(1.2);
      }
      .glide__bullet {
        transition: all 0.3s ease-in-out;
      }
      .image-container {
        height: 250px;
        overflow: hidden;
      }
    </style>
  </head>
  <body class="bg-gray-100">
    <!-- Loader -->
    <div
      id="loader"
      class="fixed inset-0 bg-white flex items-center justify-center z-[999]"
    >
      <div
        class="animate-spin w-12 h-12 border-4 border-blue-600 border-t-transparent rounded-full"
      ></div>
    </div>

    <!-- Navigation -->
    <header
      class="backdrop-blur text-white p-4 shadow-md fixed w-full top-0 z-50"
    >
      <nav class="container mx-auto flex justify-between items-center">
        <div class="text-xm:text-xl md:text-3xl font-bold inline-block animate-pulse">Service Connect</div>
        <div class="hidden md:flex space-x-6">
          <% if (user) { %>
          <!-- <a href="/bookings" class="hover:text-gray-300">Matangazo Yangu</a> -->
          <% } %>
        </div>
        <div class="hidden md:flex space-x-4">
          <% if (!user) { %>
          <button
            onclick="showAuthModal('login')"
            class="text-white px-4 py-2 rounded-full shadow-sm hover:text-blue-600 transition font-bold"
          >
            Log in
          </button>
          <button
            onclick="showAuthModal('register')"
            class="text-white px-4 py-2 rounded-full shadow-sm hover:text-green-600 transition font-bold"
          >
            Sign Up
          </button>
          <% } else { %>
          <div class="relative group">
            <button
              class="bg-white text-blue-600 px-4 py-2 rounded-full shadow-md hover:bg-gray-200 transition flex items-center"
            >
              <span class="mr-2"><%= user.workers?.[0]?.full_name || user.clients?.[0]?.full_name %></span>
              <i class="fas fa-chevron-down text-sm"></i>
            </button>
            <div
              class="absolute right-0 mt-2 w-48 bg-white rounded-lg shadow-xl hidden group-hover:block"
            >
              <a
                href="/profile"
                class="block px-4 py-2 text-gray-800 hover:bg-blue-50"
                >Profile</a
              >
              <!-- <a
                href="/bookings"
                class="block px-4 py-2 text-gray-800 hover:bg-blue-50"
                >Matangazo</a
              > -->
              <form action="/logout" method="POST" class="border-t mt-2">
                <button
                  type="submit"
                  class="w-full text-left px-4 py-2 text-red-600 hover:bg-red-50"
                >
                  Log out
                </button>
              </form>
            </div>
          </div>
          <% } %>
        </div>
        <button id="menu-toggle" class="md:hidden text-white text-2xl">
          ☰
        </button>
      </nav>
    </header>

    <!-- Mobile Menu -->
    <div
      id="mobileMenu"
      class="fixed inset-y-0 right-0 w-64 bg-white shadow-xl z-50 p-4 transform translate-x-full transition-transform duration-300"
    >
      <button
        id="close-menu"
        class="absolute top-4 right-4 text-2xl text-gray-600"
      >
        <span class="text-4xl hover:bg-black hover:text-white rounded-full px-2">×</span>
      </button>
      <div class="mt-8 space-y-4">
        <% if (!user) { %>
        <button
          onclick="showAuthModal('login')"
          class="w-full text-left p-2 hover:bg-blue-50 rounded-lg"
        >
          Login
        </button>
        <button
          onclick="showAuthModal('register')"
          class="w-full text-left p-2 hover:bg-blue-50 rounded-lg"
        >
          Sign Up
        </button>
        <% } else { %>
        <a
          href="/profile"
          class="block p-2 hover:bg-blue-50 rounded-lg"
          onclick="return handleMenuClick()"
          >Client</a
        >
        <!-- <a
          href="/bookings"
          class="block p-2 hover:bg-blue-50 rounded-lg"
          onclick="return handleMenuClick()"
          >Matangazo</a
        > -->
        <form
          action="/logout"
          method="POST"
          onsubmit="return handleMenuClick()"
        >
          <button
            type="submit"
            class="w-full text-left p-2 hover:bg-red-50 text-red-600"
          >
            Logout
          </button>
        </form>
        <% } %>
      </div>
    </div>
    <!-- Main Content -->
    <main class="overflow-hidden">
      <!-- Hero Section -->
      <section
        class="min-h-dvh flex items-center justify-center text-white text-center px-6 pt-20"
      >

       <!-- Background Image -->
       <div class="absolute inset-0 z-0">
        <img src="images/background.jpg" 
             alt="Background"
             class="w-full h-full object-cover transform scale-105"
             style="filter: brightness(0.7);">
    </div>

             <!--Content Container -->
        <div class="max-w-2xl relative z-10">
          <h1 class="text-4xl md:text-5xl font-extrabold mb-4">
            Welcome to Service Connect
          </h1>
          <p class="text-lg mb-6">
            Get the best service from experienced staff.
          </p>
          <% if (!user) { %>
          <button
            onclick="showAuthModal('register')"
            class="inline-block bg-white text-blue-600 px-6 py-3 rounded-full shadow-md hover:bg-gray-100 transition"
          >
             Learn More
          </button>
          <% } else { %>
          <a
            href="#"
            class="inline-block bg-white text-blue-600 px-6 py-3 rounded-full shadow-md hover:bg-gray-100 transition"
          >
            Learn More
          </a>
          <% } %>
        </div>
      </section>


         
      <!-- About US Section -->
      <div class="bg-gray-100 text-gray-800" id="about">
        <section class="bg-white px-6 py-20 md:px-20">
          <div class="mx-auto max-w-6xl">
            <h2 class="mb-8 text-4xl font-extrabold text-blue-700">
              About Our Platform
            </h2>
            <p class="max-w-4xl text-lg leading-relaxed text-gray-700">
              Our platform is a trusted digital space built to simplify life by
              connecting people with skilled, part-time professionals ready to
              help with tasks like
              <span class="font-medium text-blue-500">gardening</span>,
              <span class="font-medium text-blue-500">laundry</span>,
              <span class="font-medium text-blue-500">guarding</span>,
              <span class="font-medium text-blue-500">catering</span>,
              <span class="font-medium text-blue-500">sewing</span>, and more.
              It’s a smart solution for modern living—offering flexibility,
              convenience, and quality on demand. <br /><br />
              We aim to empower everyday users by giving them fast, secure
              access to reliable help, while also creating fair job
              opportunities for workers looking to earn flexibly and grow
              professionally. This isn’t just a service platform—it’s a
              people-powered ecosystem designed to elevate lives, reduce stress,
              and support communities.
              <br /><br />
              As a business, it’s powerful. With growing demand for part-time
              support and digital access to trusted labor, our platform stands
              out as both impactful and sustainable—blending tech innovation
              with real-world solutions.
            </p>
          </div>
        </section>

        <!-- Stats Cards Section -->
        <section class="bg-blue-50 px-6 py-16 md:px-20">
          <div class="mx-auto max-w-6xl">
            <h3 class="mb-10 text-3xl font-bold text-blue-700">
              Our Monthly Impact
            </h3>
            <div class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3">
              <!-- Card 1 -->
              <div
                class="rounded-2xl border-l-4 border-blue-600 bg-white p-6 shadow-lg transition-all duration-500 hover:scale-105"
              >
                <h4 class="mb-2 text-lg font-semibold text-blue-600">
                  Customers Reached
                </h4>
                <p class="text-3xl font-bold text-gray-900">5,200+</p>
                <p class="mt-1 text-base text-gray-500">
                  Individuals served across all service categories.
                </p>
              </div>

              <!-- Card 2 -->
              <div
                class="rounded-2xl border-l-4 border-blue-600 bg-white p-6 shadow-lg transition-all delay-100 duration-500 hover:scale-105"
              >
                <h4 class="mb-2 text-lg font-semibold text-blue-600">
                  Monthly Revenue
                </h4>
                <p class="text-3xl font-bold text-gray-900">$18,450</p>
                <p class="mt-1 text-base text-gray-500">
                  Earned through customer bookings and service fees.
                </p>
              </div>

              <!-- Card 3 -->
              <div
                class="rounded-2xl border-l-4 border-blue-600 bg-white p-6 shadow-lg transition-all delay-200 duration-500 hover:scale-105"
              >
                <h4 class="mb-2 text-lg font-semibold text-blue-600">
                  Active Workers
                </h4>
                <p class="text-3xl font-bold text-gray-900">1,150+</p>
                <p class="mt-1 text-base text-gray-500">
                  Verified professionals available across all sectors.
                </p>
              </div>
            </div>
          </div>
        </section>
      </div>


      <!-- Services Section -->
      <section class="py-2 p-0" id="services">
        <div class="container mx-auto px-4">
